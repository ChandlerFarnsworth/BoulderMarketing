<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Contact Us</h1>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
    <div class="container">
        <div class="contact-intro">
            <h2>Ready to Grow?</h2>
            <p>Let's talk about how we can bring your brand to life online. Whether you need a full package or just some clarity, we're here to help.</p>
        </div>
        
        <div class="contact-grid">
            <div class="contact-form-container">
                <form id="contact-form" class="contact-form" action="/contact-submit" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="business">Business Name</label>
                        <input type="text" id="business" name="business">
                    </div>
                    
                    <div class="form-group">
                        <label for="service">What are you looking for?</label>
                        <select id="service" name="service">
                            <option value="website">Website Design</option>
                            <option value="social">Social Media Management</option>
                            <option value="branding">Brand Identity</option>
                            <option value="strategy">Marketing Strategy</option>
                            <option value="content">Content Creation</option>
                            <option value="other">Other/Not Sure Yet</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message (Optional)</label>
                        <textarea id="message" name="message" rows="4"></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="far fa-paper-plane"></i> Send Message
                    </button>
                </form>
            </div>
            
            <div class="contact-info">
                <div class="info-item">
                    <div class="info-icon">
                        <i class="far fa-envelope"></i>
                    </div>
                    <div class="info-content">
                        <h3>Email Us</h3>
                        <p><a href="mailto:chandler@bouldermarketing.net">chandler@bouldermarketing.net</a></p>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon">
                        <i class="far fa-calendar-alt"></i>
                    </div>
                    <div class="info-content">
                        <h3>Schedule a Call</h3>
                        <p><a href="#">Book a free consultation</a></p>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="info-content">
                        <h3>Location</h3>
                        <p>University of Colorado Boulder</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>