<header class="site-header">
    <div class="container">
        <div class="header-wrapper">
            <div class="logo">
                <a href="/">
                    <img src="/images/logo.svg" alt="Boulder Marketing Logo">
                    <span>Boulder Marketing</span>
                </a>
            </div>
            
            <nav class="main-nav">
                <button class="mobile-menu-toggle" aria-label="Toggle navigation menu">
                    <i class="fas fa-bars mobile-icon-open"></i>
                    <i class="fas fa-times mobile-icon-close"></i>
                </button>
                
                <ul class="nav-list">
                    <li><a href="/" class="{{#if (eq pageClass 'home-page')}}active{{/if}}">Home</a></li>
                    <li><a href="/about" class="{{#if (eq pageClass 'about-page')}}active{{/if}}">About</a></li>
                    <li><a href="/services" class="{{#if (eq pageClass 'services-page')}}active{{/if}}">Services</a></li>
                    <li><a href="/portfolio" class="{{#if (eq pageClass 'portfolio-page')}}active{{/if}}">Portfolio</a></li>
                    <li><a href="/contact" class="contact-link {{#if (eq pageClass 'contact-page')}}active{{/if}}">Contact</a></li>
                </ul>
            </nav>
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Header scroll effect
        const header = document.querySelector('.site-header');
        const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
        const navList = document.querySelector('.nav-list');
        
        // Scroll effect
        window.addEventListener('scroll', function() {
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });
        
        // Initialize header state on page load
        if (window.scrollY > 50) {
            header.classList.add('scrolled');
        }
        
        // Mobile menu toggle
        mobileMenuToggle.addEventListener('click', function() {
            navList.classList.toggle('active');
            document.body.classList.toggle('menu-open');
            mobileMenuToggle.classList.toggle('open');
        });
    });
</script>